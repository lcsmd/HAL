[client]
# Unique identifier for this client
client_id = mac_office_01

# Default user for this client
default_user_id = lawr

# Default interaction modality (voice, text, or both)
default_modality = voice

# Wake words (comma-separated)
default_wake_words = computer,hey assistant

[sounds]
# Path to activation sound (plays when wake word detected)
# Using TNG Star Trek computer sound
activation_sound = activation.mp3

# Path to acknowledgement sound (plays after recording completes)
acknowledgement_sound = acknowledgement.wav

[server]
# Voice server WebSocket URL
voice_server_url = ws://10.1.10.20:8585

[audio]
# Audio settings
sample_rate = 16000
channels = 1
chunk_size = 1024

# Voice Activity Detection
silence_threshold = 500
min_sound_duration = 1.0
silence_timeout = 3.0

[behavior]
# Response listening mode timeout (seconds)
rlm_timeout = 10.0

# Enable interrupt commands
enable_interrupt = true
interrupt_phrase = belay that
