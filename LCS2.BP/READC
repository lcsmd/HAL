
     OPEN 'LCS.AT' TO LCS.AT ELSE PRINT 'LCS.AT';STOP
     FN = FIELD(@SENTENCE," ",2)
     READ BUFF FROM LCS.AT,FN THEN
          BUFF = CHANGE(BUFF,TAB.@VM)
          WRITE BUFF ON LCS.AT,FN:"-N"
          F.CT = DCOUNT(BUFF,@FM)
          FOR FX = 1 TO F.CT
               PRINT BUFF<FX>
          NEXT FX
     END
     END
