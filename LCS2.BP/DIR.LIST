     FILENAME = FIELD(@SENTENCE," ",2)
     OPTION = FIELD(@SENTENCE," ",3)
     
     CR = CHAR(13)
     EXECUTE "DOS /C CHDIR" CAPTURING ROOT
     ROOT1 = ROOT<1>
     ROOT2 = CHANGE(ROOT1,"\",@VM)
     LEVEL.CT = DCOUNT(ROOT2,@VM)
     ACCOUNT = ROOT2<1,LEVEL.CT>     
     
     OPEN "DIRECTORY" TO DIRECTORY ELSE PRINT "DIRECTORY";STOP
     OPEN 'MD' TO MD ELSE PRINT 'MD';STOP
     READ MDBUFF FROM MD,FILENAME ELSE PRINT "FILE NOT FOUND";STOP
     IF MDBUFF<1> = "Q" THEN
          QACCOUNT = MDBUFF<2>
          ROOT = CHANGE(ROOT1,ACCOUNT,QACCOUNT)
     END
     CMD = 'DIR ':ROOT:'\':FILENAME
     CMD = 'DOS /C ':CMD
     *PRINT CMD
     *INPUT ANS,1
     EXECUTE CMD CAPTURING CAP
     *PRINT CAP
     *INPUT ANS,1
     **FILE.LIST = CHANGE(CAP,CRLF,@FM)
     FILE.LIST = CAP
     FILE.CT = DCOUNT(FILE.LIST,@FM)
     FOR FILE.X = 8 TO FILE.CT
          FLINE = TRIM(FILE.LIST<FILE.X>)
          FLINE = CHANGE(FLINE," ",@FM)
          *PRINT FLINE
          FNAME = FLINE<5>
          FDATE = FLINE<1>
          FTIME = FLINE<2>
          FAMPM = FLINE<3>
          FSIZE = FLINE<4>
          FKEY = FILENAME:":":FNAME
          DBUFF = ""
          DBUFF<1> = ICONV(FDATE,"D4")
          DBUFF<2> = FTIME:" ":FAMPM
          DBUFF<3> = FSIZE
          IF (FAMPM= "AM" OR FAMPM = "PM") THEN WRITE DBUFF ON DIRECTORY,FKEY
     NEXT FILE.X
     *INPUT ANS,1
     IF OPTION = "-D" THEN BY.SORT = " BY-DSND DATE BY-DSND TIME " ELSE BY.SORT = ""
     SELECT.STR = 'SORT DIRECTORY WITH FILE = "':FILENAME:'"':BY.SORT:' @'
     EXECUTE SELECT.STR
     END
