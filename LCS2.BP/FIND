     PROGRAM FIND

     DEFFUN F.FIND(FILE.NAME,EXPRESSION)
     LINE = TRIM(@SENTENCE)
     CONVERT " " TO @FM IN LINE
     REMOVE CMD FROM LINE SETTING X
     IF X THEN REMOVE FILE.NAME FROM LINE SETTING X
     
     IF X THEN 
          DEL LINE<1>
          DEL LINE<1>
          CONVERT @FM TO " " IN LINE
          EXPRESSION = LINE
     END ELSE EXPRESSION = ""
     KEYS = F.FIND(FILE.NAME,EXPRESSION)
     KEYS.CT = DCOUNT(KEYS,@FM)
     PRINT KEYS.CT:" ITEMS FOUND"
     FOR X = 1 TO KEYS.CT
          PRINT KEYS<X>
     NEXT X

     STOP
