      OPEN "LCS.TXT" TO F.LCS ELSE PRINT "LCS";STOP
      TAB=CHAR(9)
      S=@SENTENCE
      ITEM = FIELD(S," ",2)
      PRINT "READING LCS.TXT ":ITEM
      READ BUFF FROM F.LCS,ITEM THEN
         PRINT ITEM:' WAS READ'
         PRINT DCOUNT(BUFF,TAB):" TABS FOUND"
         BUFF = CHANGE(BUFF,TAB,@VM)
         WRITE BUFF ON F.LCS,ITEM
      END ELSE
         PRINT ITEM:" NOT FOUND"
      END
      END
