[Unit]
Description=OpenQM Route Listener (placeholder)
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
WorkingDirectory=/opt/hal/openqm_listener
EnvironmentFile=/opt/hal/.env
ExecStart=/usr/bin/python3 route_listener.py
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
