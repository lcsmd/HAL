[Unit]
Description=UBUAI FastAPI Server (HAL Stack)
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
WorkingDirectory=/opt/hal/ubuai_server
EnvironmentFile=/opt/hal/.env
ExecStart=/opt/hal/ubuai_server/.venv/bin/uvicorn main:app --host 0.0.0.0 --port 8001
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
